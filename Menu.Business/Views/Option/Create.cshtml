@model Menu.Business.Models.OptionViewModels.CreateViewModel

@{
    ViewData["Title"] = "Seçenek Ekle";
}

<div class="main-content">
    <div class="page-header no-gutters has-tab">
        <h2 class="font-weight-normal">Ürüne Özellik Ekleme</h2>
        <h2>@ViewBag.Name</h2>
    </div>
    <div class="container">
        <div class="tab-content m-t-15">
            <div class="tab-pane fade show active">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Create" asp-controller="Option" method="post">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <div class="radio">
                                                <input id="radio1" name="OptionType" type="radio" value="Select" checked>
                                                <label for="radio1">Tek Seçim</label>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <div class="radio">
                                                <input id="radio2" name="OptionType" type="radio" value="CheckBox">
                                                <label for="radio2">Çoklu Seçim</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-6">

                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span style="background: #fbfbfb;color: #ff00b1;width: 120px;font-weight: 500;" class="input-group-text" id="basic-addon1">Ana Özellik:</span>
                                        </div>
                                        <input type="text" class="form-control" asp-for="Title" placeholder="Ana Özellik Başlığı">
                                    </div>

                                </div>
                            </div>
                            <div id="inputs">
                                @for (int i = 0; i < Model.OptionItems.Count(); i++)
                                {
                                    <div class="form-row">
                                        <div class="form-group col-md-6">

                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span style="background: #fbfbfb;color: #ff00b1;width: 120px;font-weight: 500;" class="input-group-text" id="basic-addon1">Özellik Adı:</span>
                                                </div>
                                                <input type="text" class="form-control" asp-for="@Model.OptionItems[i].Name" placeholder="Özellik Adı">
                                            </div>

                                        </div>
                                        <div class="form-group col-md-6">

                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span style="background: #fbfbfb;color: #ff00b1;width: 120px;font-weight: 500;" class="input-group-text" id="basic-addon1">Fiyatı:</span>
                                                </div>
                                                <input type="text" class="form-control" asp-for="@Model.OptionItems[i].Price" placeholder="Fiyatı">
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="form-group col-md-3">
                                <button class="btn btn-primary m-t-30">Kaydet</button>
                            </div>
                        </form>
                        <button id="add" class="btn btn-icon btn-hover btn-sm btn-rounded">
                            <i class="fas fa-plus"></i>
                        </button>
                        <button id="del" class="btn btn-icon btn-hover btn-sm btn-rounded">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Dikkat Etmeniz Gerekenler ! </h4>
                        <hr class="m-v-25">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="alert alert-warning">
                                    <div class="d-flex justify-content-start">
                                        <span class="alert-icon m-r-20 font-size-30">
                                            <i class="anticon anticon-exclamation-circle"></i>
                                        </span>
                                        <div>
                                            <h5 class="alert-heading">Tekli Seçim Nedir ?</h5>
                                            <p>
                                                <span>Kullanıcılar 1 adet seçim yapabilir ve <b>Zorunludur.</b> </span> <br /> <br />

                                                <span style="color:red;"> <b>Örneğin;</b> </span>   <b> Türk Kahvesi </b> -> İçeriğinden Sadece 1 tanesini seçebilir.
                                                Özellikleri -> Orta , Sade ,Az Şekerli, Şekerli , <br />
                                                <span>  <b style="color:red;">Not:</b>   Eğer Özellik ekstra ücrete tabi ise fiyat ekleyin, Değilse boş bırakın !</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="alert alert-warning">
                                    <div class="d-flex justify-content-start">
                                        <span class="alert-icon m-r-20 font-size-30">
                                            <i class="anticon anticon-exclamation-circle"></i>
                                        </span>
                                        <div>
                                            <h5 class="alert-heading">Çoklu Seçim Nedir ?</h5>
                                            <p>
                                                <span>Kullanıcılar  1'den fazla seçim yapabilir ve <b>Zorunlu değildir.</b> </span> <br /> <br />

                                                <span style="color:red;"> <b>Örneğin;</b> </span>  <b> Pizza</b> -> İçeriğinden 1 ' den Fazla Seçenek seçebilir.
                                                Özellikleri -> Sucuk , Sosis ,Mısır ,Peynir. <br />
                                                <span>  <b style="color:red;">Not:</b>   Eğer Özellik ekstra ücrete tabi ise fiyat ekleyin, Değilse boş bırakın !</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <style>





        .field-validation-error {
            color: #e80c4d;
        }

        .field-validation-valid {
            display: none;
        }

        input.input-validation-error {
            border: 1px solid #e80c4d;
        }

        .validation-summary-errors {
            color: #e80c4d;
            font-size: 1.1em;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
}

@section Scripts {
    <script>$(document).ready(function () {
            var count = 1;
            $('#add').click(function () {
                count += 1;
                var html1 = ""
                    + "<div class=\"form-row\"> "
                    + "                                            <div class=\"form-group col-md-6\"> "
                    + " "
                    + "                                                <div class=\"input-group mb-3\"> "
                    + "                                                    <div class=\"input-group-prepend\"> "
                    + "                                                        <span style=\"background: #fbfbfb;color: #ff00b1;width: 120px;font-weight: 500;\" class=\"input-group-text\" id=\"basic-addon1\">Özellik";


                var html2 = ""
                    + "Adı:</span> "
                    + "                                                    </div> "
                    + "                                                    <input type=\"text\" class=\"form-control\" id='OptionItems_" + count + "__Name' name='OptionItems[" + count + "].Name' placeholder=\"Özellik Adı\"> "
                    + "                                                </div> "
                    + " "
                    + "                                            </div> "
                    + "                                            <div class=\"form-group col-md-6\"> "
                    + " "
                    + "                                                <div class=\"input-group mb-3\"> "
                    + "                                                    <div class=\"input-group-prepend\"> "
                    + "                                                        <span style=\"background: #fbfbfb;color: #ff00b1;width: 120px;font-weight: 500;\" class=\"input-group-text\" id=\"basic-addon1\">";


                var html3 = ""
                    + "Fiyatı:</span> "
                    + "                                                    </div> "
                    + "                                                    <input type=\"text\" class=\"form-control\" id='OptionItems_" + count + "__Price' name='OptionItems[" + count + "].Price' placeholder=\"Fiyatı\"> "
                    + "                                                </div> "
                    + "                                            </div> "
                    + "                                        </div>";

                var table = $('#inputs');
                if (table.find('input:text').length < 20) {
                    table.append(html1 + html2 + html3);
                }
            });
            $('#del').click(function () {
                var table = $('#inputs');
                if (table.find('input:text').length > 4) {
                    table.find('.form-row').last().remove();
                }
            });
        });</script>
}