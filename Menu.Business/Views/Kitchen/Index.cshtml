@model IEnumerable<Menu.Business.Models.KitchenViewModels.IndexViewModel>
@{
    ViewData["Title"] = "Mutfak";
}


<div class="main-content">
    <div class="page-header no-gutters">
        <div class="row align-items-md-center">
            <div class="col-md-6">
                <div class="media m-v-10">
                    <div class="avatar avatar-cyan avatar-icon avatar-square">
                        <i class="anticon anticon-star"></i>
                    </div>
                    <div class="media-body m-l-15">
                        <h6 class="mb-0">Mutfak</h6>

                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="alert alert-warning">
                    <div class="d-flex justify-content-start">
                        <span class="alert-icon m-r-20 font-size-30">
                            <i class="anticon anticon-exclamation-circle"></i>
                        </span>
                        <div>
                            <h5 class="alert-heading">Dikkat</h5>
                            <p>Mutfağa Yeni bir Kullanıcı adı, Mutfak Adı ve Şifre belirlemeniz gerekmektedir.</p>
                            <p>En Fazla 3 Adet Mutfak Biriminiz Olabilir !</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-11 mx-auto">
            <!-- Card View -->
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="m-t-20 text-center">
                                    <div class="avatar avatar-image" style="height: 100px; width: 100px;">
                                        <img src="https://cdn1.iconfinder.com/data/icons/bistro-restaurant-part-ii/64/bistro-and-restaurant_74-512.png" alt="">
                                    </div>
                                    <h4 class="m-t-30">Mutfak Adı: @item.Name</h4>
                                    <hr class="m-v-25">
                                    <b>K.Adı: @item.Username</b>
                                </div>
                                <div class="text-center m-t-15">
                                    <p style="color:red;">@item.CreatedDate</p>
                                    <p>Bu Tarihte Oluşturuldu.</p>
                                </div>
                                <div class="text-center m-t-30">



                                    <a asp-controller="Kitchen"
                                       asp-action="Edit"
                                       asp-route-id="@item.Id" class="btn btn-primary btn-tone">

                                        <span class="m-l-5">Güncelle</span>
                                    </a>

                                </div>


                            </div>
                        </div>
                    </div>

                }



            </div>

        </div>
    </div>

</div>
