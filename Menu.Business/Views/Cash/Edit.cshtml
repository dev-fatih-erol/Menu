@model Menu.Business.Models.CashViewModels.EditViewModel

@{
    ViewData["Title"] = "Mutfak Düzenle";
}

<div class="main-content">
    <div class="page-header no-gutters has-tab">
        <h2 class="font-weight-normal">Kasa Düzenle</h2>

    </div>
    <div class="container">
        <div class="tab-content m-t-15">
            <div class="tab-pane fade show active">
                <div class="card">
                    <form asp-action="Edit" asp-controller="Cash" method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="font-weight-semibold" asp-for="Username">Kullanıcı Adı:</label>
                                    <input type="text" class="form-control" asp-for="Username" placeholder="Kullanıcı Adı">
                                    <span asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="font-weight-semibold" asp-for="Password">Şifre:</label>
                                    <input type="password" class="form-control" asp-for="Password" placeholder="Şifre">
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="font-weight-semibold" asp-for="Name"> Adı:</label>
                                    <input type="text" class="form-control" asp-for="Name" placeholder="Adı">
                                    <span asp-validation-for="Name"></span>
                                </div>


                            </div>

                        </div>
                        <div class="form-group col-md-3">
                            <input type="submit" value="Mutfak Düzenle" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <style>




        .field-validation-error {
            color: #e80c4d;
        }

        .field-validation-valid {
            display: none;
        }

        input.input-validation-error {
            border: 1px solid #e80c4d;
        }

        .validation-summary-errors {
            color: #e80c4d;
            font-size: 1.1em;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
}
