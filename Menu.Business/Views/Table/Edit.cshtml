@model Menu.Business.Models.TableViewModels.EditViewModel

@{
    ViewData["Title"] = "Masa Düzenle";
}

<div class="main-content">
    <div class="page-header no-gutters has-tab">
        <h2 class="font-weight-normal">Masa Düzenle</h2>

    </div>
    <div class="container">
        <div class="tab-content m-t-15">
            <div class="tab-pane fade show active">
                <div class="card">
                    <form asp-action="Edit" asp-controller="Table" method="post">
                        <div class="card-header">
                            <div asp-validation-summary="ModelOnly"></div>
                   
                        </div>
                        <div class="card-body">

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="font-weight-semibold" asp-for="Name">Adı:</label>
                                    <input type="text" class="form-control" asp-for="Name" placeholder="Adı">
                                    <span asp-validation-for="Name"></span>
                                </div>


                            </div>

                        </div>
                        <div class="form-group col-md-3">
                            <input type="submit" value="Masa Düzenle" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <style>



        .field-validation-error {
            color: #e80c4d;
        }

        .field-validation-valid {
            display: none;
        }

        input.input-validation-error {
            border: 1px solid #e80c4d;
        }

        .validation-summary-errors {
            color: #e80c4d;
            font-size: 1.1em;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
}