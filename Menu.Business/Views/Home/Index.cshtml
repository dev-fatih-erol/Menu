@{
    Layout = "";
}

@model Menu.Business.Models.HomeViewModels.IndexViewModel

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Favicon -->
    <link rel="shortcut icon" href="assets/images/logo/favicon.png">

    <!-- page css -->
    <!-- Core css -->
    <link href="assets/css/app.min.css" rel="stylesheet">
    <title>Oturum Aç</title>
    <style>
        .field-validation-error {
            color: #e80c4d;
        }

        .field-validation-valid {
            display: none;
        }

        input.input-validation-error {
            border: 1px solid #e80c4d;
        }

        .validation-summary-errors {
            color: #e80c4d;
            font-size: 1.1em;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
</head>
<body>
    <div class="app">
        <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('assets/images/others/login-3.png')">
            <div class="d-flex flex-column justify-content-between w-100">
                <div class="container d-flex h-100">
                    <div class="row align-items-center w-100">
                        <div class="col-md-7 col-lg-5 m-h-auto">
                            <div class="card shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between m-b-30">
                                        <img class="img-fluid" alt="" src="assets/images/logo/logobimenu.png">
                                        <h2 class="m-b-0">Yönetim</h2>
                                    </div>
                                    <form asp-action="Index" asp-controller="Home" method="post">
                                        <div asp-validation-summary="ModelOnly"></div>
                                        <div class="form-group">
                                            <label asp-for="Username" class="font-weight-semibold">Kullanıcı Adı</label>
                                            <div class="input-affix">
                                                <i class="prefix-icon anticon anticon-user"></i>
                                                <input asp-for="Username" type="text" class="form-control" autocomplete="off" placeholder="Kullanıcı Adı" />
                                            </div>
                                            <span asp-validation-for="Username"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Password" class="font-weight-semibold">Şifre</label>
                                            <div class="input-affix m-b-10">
                                                <i class="prefix-icon anticon anticon-lock"></i>
                                                <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
                                            </div>
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <input type="submit" value="Giriş Yap" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-none d-md-flex p-h-40 justify-content-between">
                    <span class="">Copyright © @DateTime.Now.Year Bimenu.com</span>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a class="text-dark text-link" href="#">Politaka</a>
                        </li>
                        <li class="list-inline-item">
                            <a class="text-dark text-link" href="#">Kullanım Şartları</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.js"
            integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
            crossorigin="anonymous"></script>
    <partial name="_ValidationScriptsPartial" />
    <!-- Core Vendors JS -->
    <script src="assets/js/vendors.min.js"></script>

    <!-- page js -->
    <!-- Core JS -->
    <script src="assets/js/app.min.js"></script>
</body>
</html>