@section Styles {
    <style>

        .statustrue {
            background-color: green;
        }

        .statustruewhite {
            color: white;
        }

        .statusfalse {
            background-color: red;
        }

        .orderpaymentstatus {
            animation: blinker 0.9s linear infinite;
            color: white;
        }

        @@keyframes blinker {
            50% {
                opacity: 0;
            }
        }

        .card-body {
            border-radius: 33px !important;
            height: 120px !important;
        }

        .card {
            border-radius: 35px !important;
            border: 2px solid #bbb61d !important;
        }

        .alert {
